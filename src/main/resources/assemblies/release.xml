    </formats>
    <fileSets>
        <fileSet>
            <directory>src/main/scripts</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
            </includes>
        </fileSet>

        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>/conf/</outputDirectory>
            <includes>
                <include>*.properties*</include>
                <include>*.sql*</include>
